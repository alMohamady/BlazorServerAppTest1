<div id="validationSection" class="col-10 alert alert-info">
    @if (msg != null)
    {
        <span>
            @msg
        </span>
    }
    @if (useFragment)
    {
        @fragment
    }
</div>

@code {
    [Parameter]
    public string? msg { get; set; }

    [Parameter]
    public bool useFragment { get; set; }

    [Parameter]
    public RenderFragment fragment { get; set; }

}
